<DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	</head>
	
	<body>
		<h1>Edit Post</h1>

		<%= form_for :post, url: user_post_path(@post), :method => :patch do |form| %>
		  <%= form.label :message %>
		  <%= form.text_area :message %>
		  <%= form.hidden_field :recipient_id, :value => params[:user_id] %>

		  <%= form.submit "Update" %>
		<% end %>
	</body>
</html>