
<h1 class='edit'>Edit Post</h1>
<div class='edit_posts'>
	<%= form_for :post, url: user_post_path(@post), :method => :patch do |form| %>

	  <%= form.label :message, class:'message_label' %><br>
	  <%= form.text_area :message, class:'text_field' %><br>
	  <%= form.hidden_field :recipient_id, :value => params[:user_id] %>

	  <%= form.submit "Update", class:'submit' %>
	<% end %>
</div>
