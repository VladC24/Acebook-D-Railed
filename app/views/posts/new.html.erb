
  <% if @post.errors.any? %>
  <div class='errors' id="error_explanation">
    <h3>
      <%= pluralize(@post.errors.count, "error") %>
    </h3>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
  <% end %>

  <div class='new_posts'>
  <%= form_for(@post, url: user_posts_path) do |form| %>

    <%= form.label :message, class:'message_label' %><br>
    <%= form.text_area :message, class:'text_field' %><br>
    <%= form.hidden_field :recipient_id, :value => params[:user_id] %>

    <%= form.submit "Submit", class:'submit' %>
  <% end %>
</div>